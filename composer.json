{
    "name": "picamator/place-search-api",
    "description": "Search places using Google Map",
    "keywords": ["search", "place", "map", "google"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sergii Pryz",
            "email": "picamator@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Picamator\\PlaceSearchApi\\": "src/"
        },
       	"exclude-from-classmap": [
            "/dev/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Picamator\\PlaceSearchApi\\Tests\\Unit\\": "dev/tests/unit/src",
            "Picamator\\PlaceSearchApi\\Tests\\Integration\\": "dev/tests/integration/src"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.0",
        "ext-bcmath": "*",
        "silex/silex": "~2.0",
        "php-amqplib/php-amqplib": "~2.6",
        "mongodb/mongodb": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.5",
        "satooshi/php-coveralls": "~1.0"
   }
}
